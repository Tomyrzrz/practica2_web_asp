
@{
    ViewBag.Title = "ConsultaUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-12">
    <div class="row">
        <h2>Consulta Users</h2>
        <div class="col-md-12">
            <div id="datosbd">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" id="edit_name_user" value="Isabel" class="form-control" placeholder="Your Name" required>
                            <input type="hidden" id="id_user"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="email" id="edit_email_user" value="Peniagmail.com" class="form-control" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="password" id="edit_password_user1" value="123456" class="form-control" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="password" id="edit_password_user2" value="123456" class="form-control" placeholder="Confirm Password" required>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="edit_button" class="btn btn-primary" data-dismiss="modal">Save Info</button> 
            </div>
        </div>
    </div>
</div>

